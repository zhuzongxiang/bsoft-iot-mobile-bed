            <version>${ssdev.framework.version}</version>
        </dependency>
        <dependency>
            <groupId>ssdev</groupId>
            <artifactId>ssdev-ws</artifactId>
            <version>${ssdev.framework.version}</version>
        </dependency>
        <dependency>
            <groupId>ssdev</groupId>
